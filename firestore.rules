rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 1. Admins can read and write all data.
    // The check `exists(...)` matches the logic in `admin-auth-provider.tsx`.
    match /{document=**} {
      allow read, write: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // 2. All users (including unauthenticated ones) can read courses.
    // This rule is necessary for the public-facing course pages to work.
    match /courses/{courseId} {
      allow read: if true;
    }
  }
}
