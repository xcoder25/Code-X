rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the requesting user is an admin.
    // It checks for the user's UID in the 'admins' collection.
    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    match /users/{userId} {
      // Any authenticated user can create their own user document (e.g., on signup).
      allow create: if request.auth != null;
      // Users can only read or update their own document.
      allow read, update: if request.auth.uid == userId;
      // Admins can read any user's document.
      allow list: if isAdmin();
    }
    
    match /courses/{courseId} {
      // Admins can perform all actions on courses.
      allow read, write: if isAdmin();
    }
    
    match /accessCodes/{codeId} {
       // Admins can perform all actions on access codes.
       allow read, write: if isAdmin();
       // Authenticated users can read a specific code (for redemption).
       allow get: if request.auth != null;
    }

    match /admins/{adminId} {
      // Only admins can read the list of other admins.
      allow read: if isAdmin();
    }
    
    match /notifications/{notificationId} {
      // Admins can create notifications.
      allow create: if isAdmin();
      // Any authenticated user can read notifications.
      allow read: if request.auth != null;
    }
  }
}
