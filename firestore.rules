
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to courses, only admins can write.
    match /courses/{courseId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Allow users to read/update their own data. Admins can list users.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow list: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Admins can manage other admins.
    match /admins/{adminId} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }

    // Admins can manage access codes.
    match /accessCodes/{codeId} {
      allow read, write, create, delete: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Authenticated users can read notifications, admins can write.
    match /notifications/{notificationId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
